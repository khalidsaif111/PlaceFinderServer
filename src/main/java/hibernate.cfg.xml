<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.default_schema">placefinder</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<mapping class="com.placefinderserver.model.Goal" />
		<mapping class="com.placefinderserver.model.Exercise" />
		<mapping class="com.placefinderserver.model.UserInfo" />
		<mapping class="com.placefinderserver.model.UserLoginInfo" />
		<mapping class="com.placefinderserver.model.Authority" />
	</session-factory>
</hibernate-configuration>
